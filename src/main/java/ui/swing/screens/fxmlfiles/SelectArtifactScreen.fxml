<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" stylesheets="@../cssfiles/screenstyles.css" fx:controller="ui.swing.screens.screencontrollers.SelectArtifactScreenController">
    <children>
        <VBox alignment="CENTER" spacing="20">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20"/>
            </padding>

            <!-- Artifact Selection Area -->
            <HBox fx:id="artifactContainer" spacing="10" alignment="CENTER">
                <!-- Artifact buttons will be added here dynamically -->
            </HBox>

            <!-- Message Label -->
            <Label fx:id="messageLabel" text="Please select an artifact" />

            <!-- Action Buttons -->
            <HBox spacing="10">
                <Button fx:id="selectButton" text="SELECT" onAction="#handleSelectAction" />
                <Button fx:id="quitButton" text="QUIT" onAction="#handleQuitAction" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
