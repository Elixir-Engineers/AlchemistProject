<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.Cursor?>

<AnchorPane prefHeight="550.0" prefWidth="904.0" styleClass="root" stylesheets="@../../cssfiles/screenstyles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.swing.screens.screencontrollers.MakeExperimentScreenController">
    <!-- Ingredient Container -->
    <AnchorPane fx:id="ingredientContainer" layoutX="25" layoutY="20" prefHeight="200.0" prefWidth="730.0">
        <!-- Dynamically added ingredients will go here -->
    </AnchorPane>
    <!-- Tester Buttons -->
    <Button fx:id="studentButton" layoutX="28.0" layoutY="265.0" text="Student" />
    <Button fx:id="yourselfButton" layoutX="177.0" layoutY="265.0" text="Yourself" />

    <!-- Make Experiment Button -->
    <Button fx:id="makeExperimentButton" layoutX="345.0" layoutY="265.0" text="Make Experiment" />
<Pane layoutX="28.0" layoutY="354.0" prefHeight="139.0" prefWidth="322.0" styleClass="pane-background">
    <!-- Labels -->
    <Label fx:id="ingredient1Label" layoutX="10.0" layoutY="16.0" text="Ingredient 1: None">
         <font>
            <Font name="System Bold" size="16.0" />
         </font></Label>
    <Label fx:id="ingredient2Label" layoutX="10.0" layoutY="57.0" text="Ingredient 2: None">
         <font>
            <Font name="System Bold" size="16.0" />
         </font></Label>
    <Label fx:id="messageLabel" layoutX="10.0" layoutY="100.0" text="Please select two ingredients and a tester">
         <font>
            <Font name="System Bold" size="16.0" />
         </font></Label>
 </Pane>
          <!-- Potion Image View -->
    <ImageView fx:id="potionImageView" fitHeight="225.0" fitWidth="161.0" layoutX="692.0" layoutY="61.0" pickOnBounds="true" preserveRatio="true">
      <viewport>
         <Rectangle2D height="950.0" minX="480.0" minY="400.0" width="650.0" />
      </viewport>
   </ImageView>
   <ImageView fx:id="exitButtonImage" onMousePressed="#exitButtonPressed" fitHeight="47.0" fitWidth="40.0" layoutX="846.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
    <image>
        <Image url="@/images/entranceUI/x.square.png" /> <!-- Make sure this path is correct -->
    </image>
    <cursor>
            <Cursor fx:constant="OPEN_HAND" />
         </cursor>
</ImageView>

</AnchorPane>
