<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="mainContainer" alignment="CENTER" spacing="20" stylesheets="@../cssfiles/screenstyles.css" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.swing.screens.screencontrollers.UseArtifactScreenController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20"/>
    </padding>

    <!-- Container for Ingredient Cards -->
    <HBox fx:id="ingredientContainer" spacing="10" alignment="CENTER">
        <!-- Ingredient cards will be added here dynamically in the controller -->
    </HBox>

    <!-- Message Label -->
    <Label fx:id="messageLabel" text="Please select an ingredient" styleClass="message-label"/>

    <!-- Done Button -->
    <Button fx:id="doneButton" text="DONE!" onAction="#handleDoneAction" styleClass="done-button"/>
    <Button fx:id="quitButton" onAction="#handleBackAction" prefHeight="35.0" prefWidth="107.0" text="Back" />
</VBox>
