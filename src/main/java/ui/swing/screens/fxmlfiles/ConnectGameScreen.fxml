<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650.0" prefWidth="900.0" stylesheets="@../cssfiles/screenstyles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.swing.screens.screencontrollers.ConnectGameScreenController">

	<children>
		<Pane layoutX="200.0" layoutY="113.0" prefHeight="425.0" prefWidth="500.0" styleClass="pane-background">
			<children>
				<!-- Background Image -->
				<!-- Assuming you'll handle the background image through CSS or an ImageView -->
				<!-- Connect to a Game Label -->
				<Label fx:id="infoLabel" alignment="CENTER" layoutX="100.0" layoutY="50.0" prefHeight="80" prefWidth="300" text="Connect to a Game" textFill="#11ee32">
					<font>
						<Font size="30.0" />
					</font>
				</Label>

				<!-- IP Address Information Label -->
				<Label fx:id="ipTextInf" alignment="CENTER" layoutX="100.0" layoutY="112.0" prefHeight="30" prefWidth="300" text="Enter Host IP" textFill="#11ee32">
					<font>
						<Font size="16.0" />
					</font>
				</Label>
				<!-- IP Address Text Field -->
				<TextField fx:id="ipTextField" layoutX="100.0" layoutY="200.0" prefHeight="30" prefWidth="300" />

				<!-- Connect Button -->
				<Button fx:id="connectButton" layoutX="150.0" layoutY="330.0" onMousePressed="#handleConnectButtonAction" prefHeight="50" prefWidth="200" text="Connect" />

				<!-- Status Label -->
				<Label fx:id="statusLabel" alignment="CENTER" layoutX="300.0" layoutY="379.0" prefHeight="30" prefWidth="300" text="" textFill="RED">
					<font>
						<Font size="16.0" />
					</font>
				</Label>
			</children>
		</Pane>

				<!-- Back Button -->
				<Button fx:id="backButton" layoutX="10.0" layoutY="11.0" onMousePressed="#handleBackButtonAction" prefHeight="47.0" prefWidth="137.0" text="Back" />
	</children>
</AnchorPane>
