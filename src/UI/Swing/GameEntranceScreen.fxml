<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UI.Swing.GameEntranceScreenController">
    <ImageView fx:id="backgroundImage" fitHeight="800" fitWidth="1000" pickOnBounds="true" preserveRatio="true">
      <image>
         <Image url="@../../../../../Desktop/alchemy_game.png" />
      </image></ImageView>

    <VBox alignment="CENTER" layoutX="250" layoutY="200" spacing="20" />
     <Button fx:id="playButton" layoutX="82.0" layoutY="557.0" onAction="#handlePlay" prefHeight="46.0" prefWidth="166.0" styleClass="entrance-button" text="Play" textFill="#dd0808">
      <font>
         <Font name="Apple Chancery" size="30.0" />
      </font>
   </Button>
     <Button fx:id="quitButton" layoutX="774.0" layoutY="21.0" onAction="#handleQuit" styleClass="entrance-button" text="Cancel" />
     <Button fx:id="helpButton" layoutX="146.0" layoutY="664.0" onAction="#handleHelp" styleClass="entrance-button" text="Help">
      <font>
         <Font name="Apple Chancery" size="13.0" />
      </font>
   </Button>
     <Button fx:id="settingsButton" layoutX="121.0" layoutY="723.0" onAction="#handleSettings" prefHeight="45.0" prefWidth="90.0" styleClass="entrance-button" text="Settings">
      <font>
         <Font name="Apple Chancery" size="15.0" />
      </font>
   </Button>
</AnchorPane>
