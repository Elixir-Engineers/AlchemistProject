<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="your.package.BoardScreenController">
    <top>
        <HBox spacing="10" style="-fx-padding: 10;">
            <Label fx:id="playerInfoLabel" text="Player Info"/>
        </HBox>
    </top>
    <center>
        <GridPane fx:id="gameBoardGrid">
            <!-- Game board cells can be added dynamically in the controller -->
        </GridPane>
    </center>
    <left>
        <VBox spacing="10" style="-fx-padding: 10;">
            <Button text="Start Game" onAction="#handleStartGame"/>
            <Button text="End Game" onAction="#handleEndGame"/>
        </VBox>
    </left>
</BorderPane>
